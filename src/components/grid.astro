---
import Card from '@/components/card.astro';
---

<ul role="list" class="link-card-grid">
  <Card	href="https://d.tendagaming.com.br" title="Discord"	body="Entre em nosso Discord">
    <img src="/images/logos/discord-mark-white.svg" alt="Discord" style="height: 100%; max-height: 40px; width: auto;">
  </Card>
  <Card	href="https://w.tendagaming.com.br" title="WhatsApp" body="Nosso grupo do WhatsApp">
    <img src="/images/logos/whatsapp-white.svg" alt="WhatsApp" style="height: 100%; max-height: 40px; width: auto;">
  </Card>
  <Card	href="https://t.tendagaming.com.br" title="Telegram" body="Nosso grupo no Telegram">
    <img src="/images/logos/telegram-white.svg" alt="Telegram" style="height: 100%; max-height: 40px; width: auto;">
  </Card>
  <Card	href="https://r.tendagaming.com.br" title="Reddit" body="Nossa comunidade no Reddit">
    <img src="/images/logos/reddit-white.svg" alt="Reddit" style="height: 100%; max-height: 40px; width: auto;">
  </Card>
</ul>

<style>
  .link-card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
    gap: 2rem;
    padding: 0;
  }
</style>